#
#  tcanmsrc - global parameters used within a tcanms environment.
#

# language support
export LANG=en_US.ISO8859-1

export TCANMS_HOME="${HOME}/tcanms"

export TCANMS_BIN=${TCANMS_HOME}/bin
export TCANMS_SBIN=${TCANMS_HOME}/sbin
export TCANMS_TMP=${TCANMS_HOME}/tmp
export TCANMS_LOGS=${TCANMS_HOME}/logs


export PATH=${PATH}:${TCANMS_HOME}/bin:${TCANMS_HOME}/sbin
export LD_LIBRARY_PATH=${LD_LIBRARY_PATH}:${TCANMS_HOME}/lib
export CPLUS_INCLUDE_PATH=${CPLUS_INCLUDE_PATH}:${TCANMS_HOME}/include


export TCANMS_USER="tcanms"
export TCANMS_GROUP="tcanms"
export TCANMS_EMAIL="tcanms@localhost"

export TCANMS_USE_CRON=0
export TCANMS_CRON_INTERVAL=5
export EMAIL_ON_ERROR=0

#  these should be set in the user environment as needed per host.
#  and are included here as reference.
export TCANMS_USEDB="mysql"
#export TCANMS_DBNAME=
#export TCANMS_DBUSER=
#export TCANMS_DBPASS=
#export TCANMS_DBHOST=


# kernel version
KV=$(uname -r)
KVMAJOR=${KV%%.*}
KVMINOR=${KV#*.}
KVMINOR=${KVMINOR%%.*}
KVMICRO=${KV#*.*.}
KVMICRO=${KVMICRO%%[^[:digit:]]*}

#export JAVA_HOME=""
#export PATH=${PATH}:${JAVA_HOME}/bin
#export CLASSPATH=${JAVA_HOME}/jre/lib/rt.jar
#export CATALINA_OPTS=-Xmx512M

export LIBRARY_PATH=${LD_LIBRARY_PATH}
export PS1="\h{\u}$ "

# aliases
alias tnmsinit="${TCANMS_HOME}/bin/init.tcanms.sh"
alias status="${TCANMS_HOME}/bin/init.tcanms.sh info"
alias dir="ls -l"

if [ -n "$TCANMS_DEBUG" ]; then
    ulimit -c unlimited
fi

export RC_TCANMS_BASHRC="true"

