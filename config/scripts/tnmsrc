#
#  tnmsrc - global parameters used within a tnms environment.
#

# language support
export LANG=en_US.ISO8859-1
export PS1="\h{\u}$ "

export TNMS_HOME="${HOME}"
export TNMSHOME="${TNMS_HOME}"

export TNMS_BIN=${TNMS_HOME}/bin
export TNMS_SBIN=${TNMS_HOME}/sbin
export TNMS_TMP=${TNMS_HOME}/tmp
export TNMS_LOGS=${TNMS_HOME}/logs


export PATH=${PATH}:${TNMS_HOME}/bin:${TNMS_HOME}/sbin
export LD_LIBRARY_PATH=${LD_LIBRARY_PATH}:${TNMS_HOME}/lib
export CPLUS_INCLUDE_PATH=${CPLUS_INCLUDE_PATH}:${TNMS_HOME}/include


#  these should be set in the user environment as needed per host.
#  and are included here as reference.
export TNMS_USEDB="mysql"
export TNMS_USE_CRON=0
export TNMS_CRON_INTERVAL=5
export EMAIL_ON_ERROR=0
#export TNMS_EMAIL="tnms@localhost"

#export TNMS_DBNAME=
#export TNMS_DBUSER=
#export TNMS_DBPASS=
#export TNMS_DBHOST=

#export JAVA_HOME=""
#export PATH=${PATH}:${JAVA_HOME}/bin
#export CLASSPATH=${JAVA_HOME}/jre/lib/rt.jar
#export CATALINA_OPTS=-Xmx512M

# kernel version
KV=$(uname -r)
KVMAJOR=${KV%%.*}
KVMINOR=${KV#*.}
KVMINOR=${KVMINOR%%.*}
KVMICRO=${KV#*.*.}
KVMICRO=${KVMICRO%%[^[:digit:]]*}


export LIBRARY_PATH=${LD_LIBRARY_PATH}

# aliases
alias tnms="${TNMS_HOME}/bin/tnms.sh"
alias status="${TNMS_HOME}/bin/tnms.sh info"

alias a="alias"
alias dir="ls -l"

if [ -n "$TNMS_DEBUG" ]; then
    ulimit -c unlimited
fi

export RC_TNMS_BASHRC="true"

